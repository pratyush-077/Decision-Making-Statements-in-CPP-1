// EXP 5A DETERMINATION OF ODD AND EVEN NUMBERS

#include <iostream>
using namespace std;

int main() {
    int num;
    cout << "Enter the given number: ";
    cin >> num;

    if (num % 2 == 0) {
        cout << "The given number is an even number" << endl;
    } else {
        cout << "The given number is an odd number" << endl;
    }

    return 0;
}

// EXP 5B PROGRAM TO CHECK IF THE WORD IS VOWEL OR CONSONENT

#include <iostream>
using namespace std;

int main(){
    char character;
    cout << "enter the given character: ";
    cin >> character;

    if(character == 'a' || character == 'e' || character == 'i' || character == 'o' || character == 'u' ||
       character == 'A' || character == 'E' || character == 'I' || character == 'O' || character == 'U'){
        cout << "the given letter is a vowel" << endl;
    }
    else if(character >= 'a' && character <= 'z'){
        cout << "the character is a consonent" << endl;
    }
    else{
        cout << "enter a valid character...." << endl;
    }

    return 0;
}


//EXP 5C FINDING THE LARGREST OF THE 3 NUMBERS BY NESTED IF STATEMENTS

#include <iostream>
using namespace std;

int main() {
    int num1, num2, num3;

    cout << "Enter the first number: ";
    cin >> num1;

    cout << "Enter the second number: ";
    cin >> num2;

    cout << "Enter the third number: ";
    cin >> num3;

    if (num1 > num2) {
        if (num1 > num3) {
            cout << num1 << " is the greatest number" << endl;
        } else {
            cout << num3 << " is the greatest number" << endl;
        }
    } else {
        if (num2 > num3) {
            cout << num2 << " is the greatest number" << endl;
        } else {
            cout << num3 << " is the greatest number" << endl;
        }
    }

    return 0;
}


// EXP 5D DETERMINATION OF THE DAY USING NUMBER

#include <iostream>
using namespace std;

int main(){
    int num;
    cout << "Enter the given number (1-7): ";
    cin >> num;

    switch(num){
        case 1:
            cout << "Monday";
            break;
        case 2:
            cout << "Tuesday";
            break;
        case 3:
            cout << "Wednesday";
            break;
        case 4:
            cout << "Thursday";
            break;
        case 5:
            cout << "Friday";
            break;
        case 6:
            cout << "Saturday";
            break;
        case 7:
            cout << "Sunday";
            break;
        default:
            cout << "PLEASE ENTER A VALID NUMBER";
    }

    return 0;
}

// EXP 5E DETERMINATION OF A SIMPLE CALCULATOR 

#include <iostream>
using namespace std;

int main() {
    double num1, num2, result;
    char operations;

    cout << "Enter first number: ";
    cin >> num1;

    cout << "Enter second number: ";
    cin >> num2;

    cout << "Enter operator (+, -, *, /): ";
    cin >> operations;

    switch(operations) {
        case '+':
            result = num1 + num2;
            cout << "Result = " << result << endl;
            break;

        case '-':
            result = num1 - num2;
            cout << "Result = " << result << endl;
            break;

        case '*':
            result = num1 * num2;
            cout << "Result = " << result << endl;
            break;

        case '/':
            if (num2 != 0) {
                result = num1 / num2;
                cout << "Result = " << result << endl;
            } else {
                cout << "Division is not possible by zero" << endl;
            }
            break;

        default:
            cout << "Invalid operator used.....use a valid operator" << endl;
    }

    return 0;
}

// EXP 5F A SMALL ATM MACHINE USING SWITCH STATEMENTS

#include <iostream>
using namespace std;

int main() {
    int choice;
    double balance = 5000, amount;

    cout << "1. CHECK BALANCE" << endl;
    cout << "2. DEPOSIT MONEY" << endl;
    cout << "3. WITHDRAW MONEY" << endl;
    cout << "Select any of the 3 choices: " << endl;
    cin >> choice;

    switch(choice) {
        case 1:
            cout << "Your current balance is: " << balance << endl;
            break;

        case 2:
            cout << "Enter the amount to deposit: ";
            cin >> amount;
            if (amount > 0) {
                balance += amount;
                cout << "New balance: " << balance << endl;
            } else {
                cout << "Invalid amount entered." << endl;
            }
            break;

        case 3:
            cout << "Enter the amount to withdraw: ";
            cin >> amount;
            if (amount > 0 && amount <= balance) {
                balance -= amount;
                cout << "Withdrawal successful. New balance: " << balance << endl;
            } else {
                cout << "Insufficient balance or invalid amount." << endl;
            }
            break;

        default:
            cout << "Invalid choice. Please enter a number between 1 and 3." << endl;
    }

    return 0;
}
